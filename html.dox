<!DOCTYPE html>
<html>
<head>
<title>My Product Store</title>
<meta name="viewport" content="width=device-width, initial-scale=1.0">

<style>
body{
    font-family: Arial;
    background:#f4f4f4;
    margin:0;
    padding:0;
}
header{
    background:#222;
    color:white;
    padding:15px;
    text-align:center;
}
.search{
    text-align:center;
    margin:20px;
}
input[type="text"]{
    padding:8px;
    width:60%;
}
.container{
    display:flex;
    flex-wrap:wrap;
    justify-content:center;
}
.product{
    background:white;
    width:250px;
    margin:15px;
    padding:15px;
    border-radius:10px;
    box-shadow:0 0 10px #ccc;
    text-align:center;
}
.product img{
    width:100%;
    height:200px;
    object-fit:cover;
}
button{
    padding:8px 12px;
    margin-top:10px;
    background:green;
    color:white;
    border:none;
    cursor:pointer;
}
button:hover{
    background:darkgreen;
}
.cart{
    background:white;
    margin:20px;
    padding:15px;
    border-radius:10px;
}
</style>
</head>

<body>

<header>
<h1>GM Online Store</h1>
</header>

<div class="search">
<input type="text" id="search" placeholder="Search Product..." onkeyup="searchProduct()">
</div>

<div class="container" id="productList">

<div class="product">
<img src="https://via.placeholder.com/250" alt="">
<h3>Watch</h3>
<p>Price: <span data-price="2000">2000</span> PKR</p>
Quantity:
<input type="number" value="1" min="1" id="q1">
<br>
<button onclick="addToCart('Watch',2000,'q1')">Add to Cart</button>
</div>

<div class="product">
<img src="https://via.placeholder.com/250" alt="">
<h3>Shoes</h3>
<p>Price: <span data-price="3500">3500</span> PKR</p>
Quantity:
<input type="number" value="1" min="1" id="q2">
<br>
<button onclick="addToCart('Shoes',3500,'q2')">Add to Cart</button>
</div>

</div>

<div class="cart">
<h2>Cart</h2>
<ul id="cartItems"></ul>
<h3>Total: <span id="total">0</span> PKR</h3>

<h3>Order Form</h3>
<input type="text" id="name" placeholder="Your Name"><br><br>
<input type="text" id="address" placeholder="Your Address"><br><br>
<button onclick="orderNow()">Order on WhatsApp</button>
</div>

<script>
let total = 0;

function addToCart(name, price, qtyId){
    let qty = document.getElementById(qtyId).value;
    let cart = document.getElementById("cartItems");
    let li = document.createElement("li");
    li.innerHTML = name + " x " + qty + " = " + (price*qty) + 
    " PKR <button onclick='removeItem(this," + (price*qty) + ")'>X</button>";
    cart.appendChild(li);
    total += price * qty;
    document.getElementById("total").innerText = total;
}

function removeItem(btn, amount){
    btn.parentElement.remove();
    total -= amount;
    document.getElementById("total").innerText = total;
}

function searchProduct(){
    let input = document.getElementById("search").value.toLowerCase();
    let products = document.getElementsByClassName("product");
    for(let i=0;i<products.length;i++){
        let title = products[i].getElementsByTagName("h3")[0].innerText.toLowerCase();
        if(title.includes(input)){
            products[i].style.display="block";
        }else{
            products[i].style.display="none";
        }
    }
}

function orderNow(){
    let name = document.getElementById("name").value;
    let address = document.getElementById("address").value;
    let message = "Order from GM Store%0AName: " + name + 
    "%0AAddress: " + address + 
    "%0ATotal: " + total + " PKR";
    window.open("https://wa.me/923000000000?text=" + message);
}
</script>

</body>
</html>
